<div class="container mt-3">
  <div class="card border-dark">
    <div class="card-header">
      <span class="card-title">Clientes</span>

      <span class="pull-right">
        <%= form_with(url: clients_path, method: 'GET', local:true) do |f| %>
          <div class="input-group">
            <%= f.text_field :name_contains, placeholder: 'Por nome', class: 'form-control form-control-sm' %>
            <%= f.submit 'Pesquisar', class: 'btn btn-sm' %>
          </div>
        <% end %>
      </span>
    </div>
      <div class="card-body">

        <div class='table-responsive'>
          <table class='table table-striped table-bordered table-condensed'>
            <thead>
              <tr>
                <th>Nome</th>
                <th class="text-center">Imagem</th>
                <th class="text-center">Ativo</th>
                <th colspan="3" class="text-center">Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @clients.each do |client| %>
                <tr>
                  <td><%= cliente.name %></td>
                  <td class="text-center"><%= image_tag client.logo.url(:icon) %></td>
                  <td class="text-center">
                    <%= client.active? ? content_tag(:i, '',  class: 'fa fa-2x fa-check') : content_tag(:i, '', class: 'fa fa-2x fa-close') %>
                  </td>
                  <td class="text-center"><%= link_to 'Detalhes', cliente %></td>
                  <td class="text-center"><%= link_to 'Editar', edit_client_path(client) %></td>
                  <td class="text-center"><%= link_to 'Excluir', client, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

      </div>

      <div class="card-footer">
        <%= link_to new_client_path do %>
          <i class="fa fa-plus" aria-hidden="true"></i>
          Novo
        <% end %>
      </div>

  </div>
</div>
