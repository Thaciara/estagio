<div class="bg- pt-3">

  <div class="container">

    <% if !@produtos.empty? %>

      <!--Carousel Wrapper-->
      <div id="multi-item-example" class="carousel slide carousel-multi-item text-center" data-ride="carousel">

          <!--Slides-->
          <div class="carousel-inner" role="listbox">

            <% active_class = 'active' %>
            <% @produtos.in_groups_of(3, false).each do |itens| %>

              <div class="carousel-item <%= active_class %>">
                <% active_class = '' %>

                <% itens.each do |item| %>
                  <div class="col-md-4 clearfix d-none d-md-block">
                      <div class="card bg-light">
                        <div class="card-header text-md-center" style="height: 80px;">
                          <h6 class="card-title"><%= item.name %></h6>
                        </div>
                        <div class="card-body">
                          <%= link_to item do %>
                            <%= image_tag item.image.url(:medium), class: 'img-thumbnail img-fluid' %>
                          <% end %>
                        </div>
                        <div class="card-footer text-center bg-dark">
                          <%= link_to item, class: 'text-white' do %>
                            <i class="fa fa-plus"></i>
                            Mais informações
                          <% end %>
                        </div>
                      </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>

          <!--/.Slides-->
          <!--Controls-->
          <div class="controls-top mt-3">
              <a class="btn-floating bg-dark" href="#multi-item-example" data-slide="prev"><i class="fa fa-chevron-left"></i></a>
              <a class="btn-floating bg-dark" href="#multi-item-example" data-slide="next"><i class="fa fa-chevron-right"></i></a>
          </div>
          <!--/.Controls-->

      </div>
      <!--/.Carousel Wrapper-->

  <% end %>

  <% if !@clientes.empty? %>
      <!--Carousel Wrapper-->
      <div id="multi-item-clientes" class="carousel slide carousel-multi-item text-center" data-ride="carousel">

          <!--Slides-->
          <div class="carousel-inner" role="listbox">

            <% active_class = 'active' %>
            <% @clientes.in_groups_of(3, false).each do |itens| %>

              <div class="carousel-item <%= active_class %>">
                <% active_class = '' %>

                <% itens.each do |item| %>
                  <div class="col-md-4 clearfix d-none d-md-block">
                    <div class="card bg-light"></div>

                    <div class="card-body">
                      <%= image_tag item.logo.url, class: 'img-thumbnail img-fluid' %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>

          <!--/.Slides-->
          <!--Controls-->
          <div class="controls-top mt-3 text-center">
              <a class="btn-floating bg-dark" href="#multi-item-clientes" data-slide="prev"><i class="fa fa-chevron-left"></i></a>
              <a class="btn-floating bg-dark" href="#multi-item-clientes" data-slide="next"><i class="fa fa-chevron-right"></i></a>
          </div>
          <!--/.Controls-->

      </div>
      <!--/.Carousel Wrapper-->

  <% end %>

  </div>
</div>
